<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        >
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:id="@+id/korisnik"
            android:scaleType="fitXY"
            android:src="@drawable/ic_person_outline_black_24dp"
            />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:hint="Korisnicko ime"
            android:textColorHint="#FFFFFF"
            android:id="@+id/editKorisnickoIme"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:id="@+id/email"
            android:scaleType="fitXY"
            android:src="@drawable/email1"
            />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:hint="email"
            android:textColorHint="#FFFFFF"
            android:id="@+id/editEmail"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        >
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:id="@+id/lozinka"
            android:scaleType="fitXY"
            android:src="@drawable/password"
            />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:hint="Lozinka"
            android:textColorHint="#FFFFFF"
            android:id="@+id/editLozinka"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        >
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:id="@+id/danRodjenja"
            android:scaleType="fitXY"
            android:src="@drawable/birthday1"
            />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:hint="Dan rodjenja"
            android:textColorHint="#FFFFFF"
            android:id="@+id/editDanRodjenja"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        >
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:id="@+id/telefon"
            android:scaleType="fitXY"
            android:src="@drawable/birthday1"
            />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:hint="Dan rodjenja"
            android:textColorHint="#FFFFFF"
            android:id="@+id/editTelefon"

            />
    </LinearLayout>


</LinearLayout>
    </ScrollView>