<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/logo_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/linear1"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imagePrijava"
            android:text="PRIJAVA"
            android:textColor="#FFFFFF"
            android:textAlignment="center"

            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="REGISTRACIJA"
            android:textColor="#FFFFFF"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_height="5dp"
        android:layout_width="match_parent">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/yellowPart1"
            />

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/yellowPart2"
            android:background="#feea00"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:id="@+id/korisnik"
            android:scaleType="fitXY"
            android:src="@drawable/ic_person_outline_black_24dp"
            />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:hint="Korisnicko ime"
            android:textColorHint="#FFFFFF"
            android:id="@+id/editKorisnickoIme"

            />
        </LinearLayout>

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="50dp"
            android:id="@+id/lozinka"
            android:scaleType="fitXY"
            android:src="@drawable/ic_enhanced_encryption_black_24dp"
            />

        <EditText
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:hint="Lozinka"
            android:textColorHint="#FFFFFF"
            android:id="@+id/editLozinka"


            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#feea00"
        android:text="NASTAVI"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        />

    <TextView
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:text="Zaboravljena lozinka?"
        android:textColor="#777777"
        android:gravity="center"

        />

</LinearLayout>